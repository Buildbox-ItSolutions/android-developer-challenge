<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPerfilFundo"
    tools:context="com.testebuildbox.testebuildbox.Activityes.GaleriaInfoActivityDetails">



<android.support.v7.widget.CardView
    android:id="@+id/cardPerfil"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="7dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPerfilUser"
        android:id="@+id/relativeLayout">

        <android.support.v7.widget.CardView
            android:layout_centerHorizontal="true"
            android:id="@+id/cardImagePerfil"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="50dp">

            <ProgressBar
                android:id="@+id/progressPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/imgPerfil"
                android:layout_width="100dp"
                android:layout_height="100dp"
                />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/nomeUser"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/cardImagePerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Francisco Santos "
            />

        <LinearLayout
            android:id="@+id/lyt_local"
            android:layout_below="@+id/nomeUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Campinas, SP, Brasil"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_social"
            android:layout_below="@+id/lyt_local"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            android:gravity="center">

        <ImageView
            android:layout_below="@+id/nomeuser"
            android:id="@+id/instagramIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/instagram"
            />
            />

        <TextView
            android:id="@+id/instagram"
            android:layout_below="@+id/nomeuser"
            android:layout_toRightOf="@+id/instagramIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="Descrição: "
            android:layout_marginRight="30dp"
            />


        <ImageView
            android:layout_below="@+id/nomeuser"
            android:id="@+id/youtubeIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/youtube"/>
        />

        <TextView
            android:id="@+id/youtube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="Descrição: "
            />

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>

   <TextView
       android:layout_below="@+id/cardPerfil"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="25dp"
       android:textColor="#868686"
       android:layout_centerInParent="true"
       android:layout_marginTop="10dp"
       android:text="Não há Informações"/>

</RelativeLayout>

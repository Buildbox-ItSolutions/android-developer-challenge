<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/movietselected">

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fundocinza">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:minHeight="200dp"
            android:id="@+id/relative_poster"
            android:background="@drawable/movie_selected">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/poster_movie"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_width="300dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relative_poster">

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo:"
                android:textSize="12dp"
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:textColor="@color/colorTextLogo"
                />

            <TextView
                android:id="@+id/type_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/type"
                android:layout_toRightOf="@+id/type"
                android:layout_marginLeft="3dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />

            <TextView
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_alignTop="@+id/type"
                android:text="Ano:"
                android:layout_toRightOf="@+id/type_movie"
                android:textSize="12dp"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorTextLogo"
                />

            <TextView
                android:id="@+id/year_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/type"
                android:layout_toRightOf="@+id/year"
                android:layout_marginLeft="5dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />

            <TextView
                android:id="@+id/released"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_alignTop="@+id/type"
                android:text="Lançamento:"
                android:layout_toRightOf="@+id/year_movie"
                android:textSize="12dp"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorTextLogo"
                />

            <TextView
                android:id="@+id/released_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/type"
                android:layout_toRightOf="@+id/released"
                android:layout_marginLeft="5dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />

            <TextView
                android:id="@+id/rated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/type"
                android:layout_marginTop="3dp"
                android:text="PG:"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorTextLogo"
                />

            <TextView
                android:id="@+id/rated_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/rated"
                android:layout_toRightOf="@+id/rated"
                android:layout_marginLeft="3dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />

            <TextView
                android:id="@+id/runtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/type"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/rated_movie"
                android:text="Duração:"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorTextLogo"
                />

            <TextView
                android:id="@+id/runtime_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/rated"
                android:layout_toRightOf="@+id/runtime"
                android:layout_marginLeft="3dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />

            <TextView
                android:id="@+id/director"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/type"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/runtime_movie"
                android:text="Diretor:"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorTextLogo"
                />

            <TextView
                android:id="@+id/director_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/rated"
                android:layout_toRightOf="@+id/director"
                android:layout_marginLeft="3dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />

            <TextView
                android:id="@+id/genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rated_movie"
                android:layout_marginTop="3dp"
                android:text="Gênero:"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorTextLogo"
                />

            <TextView
                android:id="@+id/genre_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/genre"
                android:layout_toRightOf="@+id/genre"
                android:layout_marginLeft="3dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />

            <TextView
                android:id="@+id/actors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/genre_movie"
                android:layout_marginTop="3dp"
                android:text="Elenco:"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorTextLogo"
                />

            <TextView
                android:id="@+id/actors_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/actors"
                android:layout_toRightOf="@+id/actors"
                android:layout_marginLeft="3dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />

            <TextView
                android:id="@+id/plot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/actors_movie"
                android:layout_marginTop="3dp"
                android:text="Sinopse:"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorTextLogo"
                />

            <TextView
                android:id="@+id/plot_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/plot"
                android:layout_toRightOf="@+id/plot"
                android:layout_marginLeft="3dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />

            <TextView
                android:id="@+id/awards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plot_movie"
                android:layout_marginTop="3dp"
                android:text="Nomeações:"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorTextLogo"
                />

            <TextView
                android:id="@+id/awards_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/awards"
                android:layout_toRightOf="@+id/awards"
                android:layout_marginLeft="3dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />

            <TextView
                android:id="@+id/language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/awards_movie"
                android:layout_marginTop="3dp"
                android:text="Linguagem:"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorTextLogo"
                />

            <TextView
                android:id="@+id/language_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/language"
                android:layout_toRightOf="@+id/language"
                android:layout_marginLeft="3dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />

            <TextView
                android:id="@+id/country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/awards"
                android:layout_alignTop="@+id/language"
                android:layout_toRightOf="@+id/language_movie"
                android:text="País:"
                android:layout_marginLeft="15dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorTextLogo"
                />

            <TextView
                android:id="@+id/country_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/language"
                android:layout_toRightOf="@+id/country"
                android:layout_marginLeft="3dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />

            <TextView
                android:id="@+id/metascore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/language"
                android:layout_marginTop="3dp"
                android:text="Metascore:"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorTextLogo"
                />

            <TextView
                android:id="@+id/metascore_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/metascore"
                android:layout_toRightOf="@+id/metascore"
                android:layout_marginLeft="3dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />

            <TextView
                android:id="@+id/imdbrating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/language"
                android:layout_toRightOf="@+id/metascore_movie"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="imdbRating:"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorTextLogo"
                />

            <TextView
                android:id="@+id/imdbrating_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/metascore"
                android:layout_toRightOf="@+id/imdbrating"
                android:layout_marginLeft="3dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />

            <TextView
                android:id="@+id/imdbvotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/language"
                android:layout_toRightOf="@+id/imdbrating_movie"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="imdbVotes:"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorTextLogo"
                />

            <TextView
                android:id="@+id/imdbvotes_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/metascore"
                android:layout_toRightOf="@+id/imdbvotes"
                android:layout_marginLeft="3dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />

            <TextView
                android:id="@+id/writer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/metascore"
                android:layout_marginTop="3dp"
                android:text="Writer:"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorTextLogo"
                />

            <TextView
                android:id="@+id/writer_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/writer"
                android:layout_toRightOf="@+id/writer"
                android:layout_marginLeft="3dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
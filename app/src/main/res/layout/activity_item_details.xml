<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ItemDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00BDA1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivPoster"
            android:layout_width="130dp"
            android:layout_height="170dp"
            android:layout_margin="20dp"
            android:background="#00BDA1"
            android:src="@drawable/image_not_found" />

        <!--Info Principal-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EEEEEE"
            android:padding="7dp"
            android:orientation="vertical">

            <!--Rating / Votes-->
            <RatingBar
                android:id="@+id/rtbRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:numStars="5"
                android:stepSize="0.1"
                android:layout_gravity="center"
                android:isIndicator="true" />
            <TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginTop="-2dp"
                android:layout_gravity="center" />
            <TextView
                android:id="@+id/tvTotalVotes"
                android:layout_gravity="center"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!-- -->

            <!--Title-->
            <TextView
                android:text="Título:"
                android:textColor="#1D1D1D"
                android:textStyle="bold"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvTitle"
                android:fontFamily="sans-serif"
                android:textColor="#555555"
                android:textSize="16sp"
                android:layout_marginTop="-4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!-- -->

            <!--Runtime-->
            <TextView
                android:text="Duração:"
                android:textColor="#1D1D1D"
                android:textStyle="bold"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvRuntime"
                android:fontFamily="sans-serif"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_marginTop="-2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!-- -->

            <!--Production-->
            <TextView
                android:text="Produção:"
                android:textColor="#1D1D1D"
                android:textStyle="bold"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvProduction"
                android:fontFamily="sans-serif"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_marginTop="-2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!-- -->

            <!--Director-->
            <TextView
                android:text="Direção:"
                android:textColor="#1D1D1D"
                android:textStyle="bold"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvDirector"
                android:fontFamily="sans-serif"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_marginTop="-2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!---->



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A9EEEEEE"
        android:padding="20dp"
        android:orientation="vertical">

        <!--Ano-->
        <TextView
            android:text="Ano / Estreia:"
            android:textColor="#1D1D1D"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvAnoReleased"
            android:fontFamily="sans-serif"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginTop="-4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!-- -->

        <!--Idioma / País -->
        <TextView
            android:text="Idioma / País:"
            android:textColor="#1D1D1D"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvLanguageCountry"
            android:fontFamily="sans-serif"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginTop="-4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!-- -->

        <!--Genre-->
        <TextView
            android:text="Gêneros:"
            android:textColor="#1D1D1D"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvGenre"
            android:fontFamily="sans-serif"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginTop="-4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!---->

        <!--Redatores -->
        <TextView
            android:text="Redatores:"
            android:textColor="#1D1D1D"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvWriter"
            android:fontFamily="sans-serif"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginTop="-4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!-- -->

        <!--Atores-->
        <TextView
            android:text="Atores:"
            android:textColor="#1D1D1D"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvActors"
            android:fontFamily="sans-serif"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginTop="-4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!-- -->

        <!--Sinopse-->
        <TextView
            android:text="Sinopse:"
            android:textColor="#1D1D1D"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvPlot"
            android:fontFamily="sans-serif"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginTop="-4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!-- -->

        <!--Classificação-->
        <TextView
            android:text="Classificação:"
            android:textColor="#1D1D1D"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvRated"
            android:fontFamily="sans-serif"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginTop="-4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!-- -->

    </LinearLayout>

</LinearLayout>